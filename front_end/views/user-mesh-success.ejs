<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mesh Details</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
      body {
        padding-top: 3rem;
        padding-bottom: 3rem;
        background-color: #f5f5f5;
      }

      .header {
        margin-bottom: 2rem;
        text-align: center;
      }

      .header h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
      }

      h2 {
        text-align: center;
      }

      h3 {
        text-align: center;
        margin-top: 3rem;
      }

      .table-container {
        margin-top: 2rem;
      }

      .table-container table {
        margin-bottom: 2rem;
        width: 100%;
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-collapse: collapse;
      }

      .table-container table td {
        padding: 0.75rem;
        text-align: center;
        vertical-align: middle;
        border: 1px solid #dee2e6;
      }

      .table-container table th {
        font-weight: bold;
        background-color: #007bff;
        text-align: center;
        border: 1px solid #dee2e6;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>Mesh Details</h1>
        <h2>Similar Ratings Between Users <%= userId1 %> and <%= userId2 %></h2>
      </div>

      <div class="table-container">
        <h3>Movie Ratings</h3>
        <table class="table">
          <thead>
            <tr>
              <th style="color:#fff;">Movie Name</th>
              <th style="color:#fff;">User <%= userId1 %>'s Rating</th>
              <th style="color:#fff;">User <%= userId2 %>'s Rating</th>
            </tr>
          </thead>
          <tbody>
            <% movieRatings.forEach(function(movieRating) { %>
              <tr>
                <td><%= movieRating.name %></td>
                <td><%= movieRating.rating1 %></td>
                <td><%= movieRating.rating2 %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>

        <h3>Show Ratings</h3>
        <table class="table">
          <thead>
            <tr>
              <th style="color:#fff;">Show Name</th>
              <th style="color:#fff;">User <%= userId1 %>'s Rating</th>
              <th style="color:#fff;">User <%= userId2 %>'s Rating</th>
            </tr>
          </thead>
          <tbody>
            <% showRatings.forEach(function(showRating) { %>
              <tr>
                <td><%= showRating.name %></td>
                <td><%= showRating.rating1 %></td>
                <td><%= showRating.rating2 %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html
